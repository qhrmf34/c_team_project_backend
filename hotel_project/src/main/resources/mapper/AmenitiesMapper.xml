<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hotel_project.hotel_jpa.amenities.mapper.AmenitiesMapper">

    <!-- 이름 검색 통합 (페이지네이션, 검색어 없으면 전체 조회) -->
    <select id="findByName" resultType="com.hotel_project.hotel_jpa.amenities.dto.AmenitiesDto">
        SELECT id, amenities_name as amenitiesName
        FROM amenities_tbl
        <where>
            <if test="amenitiesName != null and amenitiesName != ''">
                amenities_name LIKE CONCAT('%', #{amenitiesName}, '%')
            </if>
        </where>
        ORDER BY id ASC
        LIMIT #{size} OFFSET #{offset}
    </select>

    <!-- 개수 조회 (검색어 없으면 전체 개수) -->
    <select id="countByName" resultType="long">
        SELECT COUNT(*)
        FROM amenities_tbl
        <where>
            <if test="amenitiesName != null and amenitiesName != ''">
                amenities_name LIKE CONCAT('%', #{amenitiesName}, '%')
            </if>
        </where>
    </select>

</mapper>
