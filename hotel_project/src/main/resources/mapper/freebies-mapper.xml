<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hotel_project.hotel_jpa.freebies.mapper.FreebiesMapper">

    <resultMap id="freebiesResultMap" type="com.hotel_project.hotel_jpa.freebies.dto.FreebiesDto">
        <id property="id" column="id"/>
        <result property="freebiesName" column="freebies_name"/>
    </resultMap>

    <!-- 전체 조회 -->
    <select id="findAll" resultMap="freebiesResultMap">
        SELECT id, freebies_name
        FROM freebies_tbl
        ORDER BY id ASC
    </select>

    <!-- ID로 단건 조회 -->
    <select id="findById" parameterType="Long" resultMap="freebiesResultMap">
        SELECT id, freebies_name
        FROM freebies_tbl
        WHERE id = #{id}
    </select>

    <!-- 이름으로 검색 (LIKE 검색) -->
    <select id="findByName" parameterType="String" resultMap="freebiesResultMap">
        SELECT id, freebies_name
        FROM freebies_tbl
        WHERE freebies_name LIKE CONCAT('%', #{freebiesName}, '%')
        ORDER BY id ASC
    </select>

</mapper>